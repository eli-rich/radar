{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./dist/**/*", "./node_modules/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 100,
		"ignore": ["./dist/**/*", "./node_modules/**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "all"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
